<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="NSE_Data_Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:NSE_Data_Downloader.ViewModels"
        mc:Ignorable="d">
    <Grid x:Name="RootGrid" x:FieldModifier="public">
        <StackPanel Margin="20">
            <TextBlock Text="NSE Data App Launcher" FontSize="24" Margin="0,0,0,20" />
            <TextBlock Text="{Binding StatusMessage}" Margin="0,0,0,15"/>
            <Button Content="Set Folder Path" Command="{Binding SetFolderCommand}" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>