<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NSE_Data_Downloader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NSE_Data_Downloader"
    xmlns:converters="using:NSE_Data_Downloader.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="NSE Data Downloader">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Margin="20">
        <Grid.Resources>
            <converters:FailedToVisibilityConverter x:Key="FailedToVisibilityConverter"/>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InvertBoolToVisibilityConverter x:Key="InvertBoolToVisibilityConverter"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="NSE Data Downloader" 
                          FontSize="24" 
                          FontWeight="SemiBold" 
                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                <TextBlock Text="Download historical data from NSE" 
                          FontSize="14" 
                          Opacity="0.8" 
                          Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <InfoBadge Value="{Binding CompletedCount}" Style="{ThemeResource AttentionValueInfoBadgeStyle}"/>
                <TextBlock Text="completed" FontSize="12" VerticalAlignment="Center" Opacity="0.8"/>
            </StackPanel>
        </Grid>

        <!-- Date Selection Card -->
        <Border Grid.Row="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="From" 
                          VerticalAlignment="Center" 
                          FontWeight="Medium"
                          Margin="0,0,12,0"/>
                <DatePicker Grid.Column="1" 
                           Date="{Binding StartDate, Mode=TwoWay}" 
                           HorizontalAlignment="Stretch"
                           Margin="0,0,20,0"/>

                <TextBlock Grid.Column="2" 
                          Text="To" 
                          VerticalAlignment="Center" 
                          FontWeight="Medium"
                          Margin="0,0,12,0"/>
                <DatePicker Grid.Column="3" 
                           Date="{Binding EndDate, Mode=TwoWay}" 
                           HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>

        <!-- Download Folder Card -->
        <Border Grid.Row="2" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <FontIcon Grid.Column="0" 
                         Glyph="&#xE8DA;" 
                         FontSize="16" 
                         Margin="0,0,12,0" 
                         VerticalAlignment="Center"
                         Foreground="{ThemeResource AccentTextFillColorSecondaryBrush}"/>

                <TextBox Grid.Column="1" 
                        Text="{Binding DownloadFolder, Mode=TwoWay}" 
                        IsReadOnly="True"
                        BorderThickness="0"
                        Background="Transparent"
                        Margin="0,0,12,0"/>

                <Button Grid.Column="2" 
                       Content="Browse" 
                       Click="BrowseFolder_Click"
                       Style="{ThemeResource AccentButtonStyle}"
                       Padding="16,8"/>
            </Grid>
        </Border>

        <!-- Download Type Selection -->
        <Border Grid.Row="3" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Data Types" FontWeight="Medium" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <CheckBox Content="Stock Data" IsChecked="{Binding DownloadStock, Mode=TwoWay}"/>
                    <CheckBox Content="Indices" IsChecked="{Binding DownloadIndices, Mode=TwoWay}"/>
                    <CheckBox Content="Broad Market" IsChecked="{Binding DownloadBroad, Mode=TwoWay}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Downloads List -->
        <Border Grid.Row="4" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" 
                       Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                       Padding="16,12"
                       CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Type" FontWeight="Medium" FontSize="12" Opacity="0.8"/>
                        <TextBlock Grid.Column="1" Text="Date" FontWeight="Medium" FontSize="12" Opacity="0.8"/>
                        <TextBlock Grid.Column="2" Text="Status" FontWeight="Medium" FontSize="12" Opacity="0.8"/>
                        <TextBlock Grid.Column="3" Text="File Path" FontWeight="Medium" FontSize="12" Opacity="0.8"/>
                        <TextBlock Grid.Column="4" Text="Progress" FontWeight="Medium" FontSize="12" Opacity="0.8"/>
                        <TextBlock Grid.Column="5" Text="Actions" FontWeight="Medium" FontSize="12" Opacity="0.8"/>
                    </Grid>
                </Border>

                <!-- List -->
                <ListView Grid.Row="1" 
                         ItemsSource="{Binding Downloads}"
                         SelectionMode="None"
                         Background="Transparent"
                         Padding="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent" 
                                   Padding="16,8"
                                   BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                   BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                              Text="{Binding Type}" 
                                              VerticalAlignment="Center"
                                              FontSize="13"/>

                                    <TextBlock Grid.Column="1" 
                                              Text="{Binding DateFormatted}" 
                                              VerticalAlignment="Center"
                                              FontSize="13"/>

                                    <Border Grid.Column="2" 
                                           Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                           CornerRadius="12"
                                           Padding="8,4"
                                           HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Status}" 
                                                  FontSize="11" 
                                                  FontWeight="Medium"
                                                  Foreground="White"/>
                                    </Border>

                                    <TextBlock Grid.Column="3" 
                                              Text="{Binding FilePath}" 
                                              TextTrimming="CharacterEllipsis"
                                              VerticalAlignment="Center"
                                              FontSize="12"
                                              Opacity="0.8"
                                              Margin="0,0,8,0"/>

                                    <ProgressBar Grid.Column="4" 
                                                Value="{Binding Progress}" 
                                                Maximum="100"
                                                Height="6"
                                                VerticalAlignment="Center"
                                                CornerRadius="3"/>

                                    <StackPanel Grid.Column="5" 
                                               Orientation="Horizontal" 
                                               Spacing="4">
                                        <Button Content="âŸ²" 
                                               FontSize="16"
                                               Width="32" 
                                               Height="32"
                                               Style="{ThemeResource SubtleButtonStyle}"
                                               Visibility="{Binding Status, Converter={StaticResource FailedToVisibilityConverter}}"
                                               Click="RetryDownload_Click"
                                               Tag="{Binding}"
                                               ToolTipService.ToolTip="Retry"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty state -->
                <StackPanel Grid.Row="1" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding HasDownloads, Converter={StaticResource InvertBoolToVisibilityConverter}}"
                           Spacing="8">
                    <FontIcon Glyph="&#xE896;" FontSize="48" Opacity="0.3"/>
                    <TextBlock Text="No downloads yet" 
                              FontSize="16" 
                              Opacity="0.6" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Select date range and click 'Start Download'" 
                              FontSize="12" 
                              Opacity="0.4" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Bar -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Progress Summary -->
            <StackPanel Grid.Column="0" 
                       Orientation="Horizontal" 
                       Spacing="16" 
                       VerticalAlignment="Center"
                       Visibility="{Binding HasDownloads, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock FontSize="12" Opacity="0.8">
                    <Run Text="{Binding CompletedCount}"/>
                    <Run Text="of"/>
                    <Run Text="{Binding TotalCount}"/>
                    <Run Text="completed"/>
                </TextBlock>
                <TextBlock Text="{Binding OverallProgressText}" FontSize="12" Opacity="0.8"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" 
                       Orientation="Horizontal" 
                       Spacing="8">
                <Button Content="Clear All" 
                       Command="{Binding ClearDownloadsCommand}"
                       Visibility="{Binding HasDownloads, Converter={StaticResource BoolToVisibilityConverter}}"
                       Padding="16,8"/>

                <Button Command="{Binding StartDownloadCommand}"
                       IsEnabled="{Binding CanStartDownload}"
                       Style="{ThemeResource AccentButtonStyle}"
                       Padding="20,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;" FontSize="16"/>
                        <TextBlock Text="Start Download"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>